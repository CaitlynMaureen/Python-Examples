stick1 = input("Please enter the length of the first stick in inches: ")
stick2 = input("Please enter the length of the second stick in inches: ")
stick3 = input("Please enter the length of the third stick in inches: ")

int(stick1)
int(stick2)
int(stick3)

def is_triangle(stick1, stick2, stick3):
  if (stick1 > (stick2 + stick3)):
    print ('No')
  elif (stick2 > (stick1 + stick3)):
    print ('No')
  elif (stick3 > (stick1 + stick2)):
    print ('No')
  else:
    print('Yes!')
    
print("Can you make a triangle?")
is_triangle(stick1, stick2, stick3)
